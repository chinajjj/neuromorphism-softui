<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:layoutDirection="ltr"
    >

    <TextView
        android:id="@+id/title"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello SoftUi!"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <EditText
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_margin="20dp"
        android:padding="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/textSecondry"
        android:textSize="18sp"
        android:hint="Search"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="4dp"/>


    <TextView
        android:padding="8dp"
        android:id="@+id/dummy_text"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since "
        android:textSize="16dp"
        android:textColor="@color/textSecondry"/>


    <LinearLayout
        android:id="@+id/song_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/song_thumb"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:src="@drawable/test_thumb"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:padding="4dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Song Title"
                android:textSize="16dp"
                android:textColor="@color/colorPrimaryDark" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Song Description"
                android:textSize="14dp"
                android:textColor="@color/textSecondry"/>
        </LinearLayout>
    </LinearLayout>

    <SeekBar
        android:background="@color/colorPrimary"
        android:layout_margin="20dp"
        android:id="@+id/song_seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="35"/>

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3.0"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageButton
            android:id="@+id/song_back"
            android:background="@color/colorPrimary"
            android:layout_margin="20dp"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_first_page"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"/>
        <ImageButton
            android:id="@+id/song_play"
            android:background="@color/colorPrimary"
            android:layout_margin="20dp"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_play_arrow"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"/>
        <ImageButton
            android:id="@+id/song_forward"
            android:background="@color/colorPrimary"
            android:layout_margin="20dp"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_fast_forward"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center_vertical">
        <CheckBox
            android:drawablePadding="4dp"
            android:padding="4dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:id="@+id/check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="checkBox"
            android:textSize="16dp"
            android:textColor="@color/textSecondry"/>

        <Switch
            android:layout_centerInParent="true"
            android:id="@+id/toggle_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textOff=""
            android:textOn="" />
        <RadioButton
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:id="@+id/radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RadioButton"
            android:textSize="16dp"
            android:textColor="@color/textSecondry" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical">
        <ProgressBar
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:id="@+id/progress_bar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            style="?android:attr/progressBarStyleLarge"
            android:progress="50"/>
        <ToggleButton
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:id="@+id/toggle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Disabled"
            android:textOn="Enabled"
            android:textSize="16dp"
            android:textColor="@color/textSecondry" />
    </RelativeLayout>

</LinearLayout>